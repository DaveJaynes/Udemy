<!-- The line below binds the AddRegionViewModel class to the asp-for="xxx" fields in the three input statements->
@model NZWalks.UI.Models.AddRegionViewModel 

@{
}

<h1 class="mt-3">Add Region</h1>

<!-- 
The <form method="post"> line will direct to an HttpPost method with the same name as the HttpGet method. In this case it is Add().
This is why we need a HttpGet Add() method to get the data from the form into the AddRegionViewModel class.
The HttpPost Add() method then takes that data in the AddRegionViewModel object and feeds it to the API.
 -->
<form method="post"> 

    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
